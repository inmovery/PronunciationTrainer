<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.introduction.SelectNativeLanguageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:paddingTop="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:background="@drawable/card_select_native_language"
        android:layout_gravity="center">

        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:textFontWeight="700"
            android:text="Select app language"
            android:textSize="36dp" />

        <Button
            android:id="@+id/english_choice"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="English"
            android:background="@drawable/button_white_background"
            android:layout_gravity="center"
            android:alpha="0.85"
            android:textColor="#80000000"
            android:textSize="36dp"
            android:layout_marginTop="40dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/russian_choice"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Русский"
            android:layout_gravity="center"
            android:background="@drawable/button_white_background"
            android:alpha="0.5"
            android:textColor="#000000"
            android:textSize="36dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/spanish_choice"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Español"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:background="@drawable/button_white_background"
            android:textSize="36dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/italian_choice"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Italiano"
            android:background="@drawable/button_white_background"
            android:alpha="0.5"
            android:layout_gravity="center"
            android:textSize="36dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</LinearLayout>